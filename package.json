{
  "name": "variants",
  "type": "module",
  "version": "0.0.1",
  "scripts": {
    "dev": "dotenv -e .env.development -- astro dev",
    "start": "dotenv -e .env.development -- astro dev --host",
    "build": "astro build",
    "preview": "dotenv -e .env.production -- deno run --allow-net --allow-read --allow-env ./dist/server/entry.mjs",
    "test:dev": "dotenv -e .env.development -- vitest run",    
    "astro": "astro",
    "gen:prisma": "rm -rf node_modules/.prisma; dotenv -e .env.development -- prisma generate --no-engine; PRISMA_OUTPUT=./generated deno run -A --node-modules-dir=false npm:prisma@5.4.1 generate --no-engine; cd prisma/generated/deno; cp edge.ts index.js",
    "gen:supabase": "supabase gen types typescript --project-id $(dotenv -e .env.development -p SUPABASE_PROJECT_ID) --schema public > ./src/db/supabase/types.ts; eslint --fix ./src/db/supabase/types.ts; rm supabase/.temp/cli-latest; rm -r supabase",
    "postinstall": "npm run gen:prisma",
    "migrate": "dotenv -e .env.development -- prisma migrate dev --create-only",
    "migrate:dev": "dotenv -e .env.development -- prisma migrate deploy",
    "migrate:production": "dotenv -e .env.production -- prisma migrate deploy",
    "backup:prod": "dotenv -e .env.production -- supabase db dump --db-url=$DIRECT_DATABASE_URL -f backups/schema.sql --data-only",
    "deploy": "npm run build; dotenv -e .env.production -- deployctl deploy -p variants-world --prod --include dist ./dist/server/entry.mjs;"
  },
  "dependencies": {
    "@astrojs/preact": "^3.3.0",
    "@deno/astro-adapter": "^0.1.2",
    "@preact/signals": "^1.2.3",
    "@prisma/client": "^5.14.0",
    "@prisma/extension-accelerate": "^1.1.0",
    "@supabase/supabase-js": "^2.43.4",
    "astro": "^4.9.2",
    "astro-windi": "^0.0.2",
    "base64url": "^3.0.1",
    "dotenv": "^16.4.5",
    "hash-wasm": "^4.11.0",
    "jose": "^5.3.0",
    "preact": "^10.22.0",
    "react-device-detect": "^2.2.3",
    "ts-node": "^10.9.2",
    "ulidx": "^2.3.0"
  },
  "devDependencies": {
    "@types/cookie": "^0.6.0",
    "@types/node": "^20.12.12",
    "@typescript-eslint/eslint-plugin": "^7.11.0",
    "@typescript-eslint/parser": "^7.11.0",
    "dotenv-cli": "^7.4.2",
    "eslint": "^8.57.0",
    "eslint-plugin-astro": "^1.2.0",
    "eslint-plugin-autofix": "^2.0.0",
    "eslint-plugin-github": "5.0.0-2",
    "eslint-plugin-no-relative-import-paths": "^1.5.4",
    "eslint-plugin-sort-imports-es6-autofix": "^0.6.0",
    "prettier": "^3.2.5",
    "prisma": "^5.14.0",
    "sass": "^1.77.2",
    "supabase": "^1.169.8",
    "vitest": "^1.6.0"
  }
}
