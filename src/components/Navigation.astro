---
interface Props {
  username?: string
  profileUrl?: string | null
  path: string
  isGuest?: true
}

const { path, username, profileUrl, isGuest } = Astro.props
---

<nav
  class={'h-12 w-full fixed flex justify-between items-center bg-border-light px-[20px] sm:(mb-[30px] border border-[2px] border-border-dark) shadow-dark z-1000'}
  style={{ viewTransitionName: 'nav' }}
>
  <div class={'flex gap-5 sm:gap-10'}>
    <a href={path === '/' ? '' : '/'} class={'text-white text-[28px]'} data-astro-reload>Variants</a>

    {
      !isGuest && (
        <a
          href={'/posts'}
          class={
            'h-7 flex items-center px-[7px] bg-opacity-40 hover:(text-white bg-opacity-35) bg-gray text-[18px] align-middle rounded-md  transition-colors duration-300 ease-out'
          }
        >
          Posts
        </a>
      )
    }
  </div>
  {
    username && (
      <div class={'flex gap-2.5 items-center'}>
        {username}
        <img src={profileUrl ?? '/assets/images/user.png'} alt={username ?? 'Guest'} class='h-7 rounded-md' />
      </div>
    )
  }
</nav>
