---
import GuestLanding from 'components/guest/guest-landing'
import Landing from 'components/landing/Landing'
import Layout from 'layouts/Layout.astro'
import Stars from 'components/Stars.astro'

const { user } = Astro.locals

---

<Layout title="Variants World" ogImage={'/assets/images/poster.png'}>
  <Stars isGuest={user.guest} />
  {user.guest ? <GuestLanding /> : <Landing userId={user.id} client:idle />}
</Layout>
